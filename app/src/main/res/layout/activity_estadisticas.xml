<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EstadisticasActivity">



    <TextView
        android:id="@+id/Titulo_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Este es el total \n de tus Aceites reciclados"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:scaleType="centerCrop"
        android:src="@drawable/smart1_3" />



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="250dp"
        android:layout_marginVertical="120dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Aceite domestico" />

    <EditText
        android:id="@+id/editTexResultado1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="80dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:inputType="numberSigned"
        android:text="0L" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="250dp"
        android:layout_marginVertical="230dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Industria de Fritos" />

    <EditText
        android:id="@+id/editTexResultado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="190dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:inputType="numberSigned"
        android:text="0G" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="280dp"
        android:layout_marginVertical="350dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Automotriz" />

    <EditText
        android:id="@+id/editTexResultado3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="310dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:inputType="numberSigned"
        android:text="0T" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="270dp"
        android:layout_marginVertical="460dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Lubricación \nHidraulico"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTexResultado4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="420dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:inputType="numberSigned"
        android:text="0T" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="560dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="! Muchas gracias ¡"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="670dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_home" />

        <ImageView
            android:id="@+id/categoria_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_fillet" />

        <ImageView
            android:id="@+id/sabias_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_help" />

        <ImageView
            android:id="@+id/ubi_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_place_out" />

        <ImageView
            android:id="@+id/estadistica_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_estadisticas" />


    </LinearLayout>



</RelativeLayout>
