<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aceite_domestico">


    <ImageView
        android:id="@+id/imagenAceite"
        android:layout_width="402dp"
        android:layout_height="131dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@android:string/ok"
        android:rotation="-40"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/huella_casa"
        app:srcCompat="@drawable/marcaaceiteflotante1" />

    <EditText
        android:id="@+id/acumAceite"
        android:layout_width="132dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:ems="5"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="AcumAceite"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/huella_casa"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/imagenAgua"
        android:layout_width="373dp"
        android:layout_height="117dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@android:string/ok"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/marcaagua" />

    <ImageView
        android:id="@+id/marcaJabon"
        android:layout_width="226dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@android:string/ok"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/lineajabon" />

    <EditText
        android:id="@+id/acumJabon"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="5"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="AcumJabon"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/acumAgua"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="5"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="AcumAgua"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView8"
        style="@style/titulospeque"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:textSize="14sp"
        android:text="LITROS DE AGUA NO CONTAMINADA"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        style="@style/titulospeque"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:gravity="center"
        android:text="LITROS DE ACEITE RECICLADO"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Ingresa_la_cantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        style="@style/titulospeque"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="LITROS DE JABON MULTIUSOS"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.685"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/boteAceite"
        android:layout_width="129dp"
        android:layout_height="351dp"
        android:layout_marginBottom="130dp"
        android:contentDescription="@android:string/no"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425"
        app:srcCompat="@drawable/botedeaceiteazul" />

    <TextView
        android:id="@+id/huella_casa"
        style="@style/titulos"
        android:layout_width="230dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Tu Huella EcolÃ³gica En Casa"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ingresocantidad"
        style="@style/botondegradado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Ingresar  Cantidad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Ingresa_la_cantidad"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="198dp"
        android:layout_height="66dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Ingresa la cantidad \n en litros"
        android:textAlignment="center"
        android:textColor="#0B0909"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boteAceite"
        app:layout_constraintVertical_bias="0.236" />

    <TextView
        android:id="@+id/textView5"
        style="@style/titulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registra tu aporte de hoy :)"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Ingresa_la_cantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.804" />

    <ImageView
        android:id="@+id/sabias_2"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_help" />

    <ImageView
        android:id="@+id/home_2"
        android:layout_width="58dp"
        android:layout_height="69dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_home" />

    <ImageView
        android:id="@+id/ubi_2"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_place_out" />

    <ImageView
        android:id="@+id/categoria_2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_fillet" />

    <ImageView
        android:id="@+id/estadisticas_2"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_estadisticas" />

</androidx.constraintlayout.widget.ConstraintLayout>





